                <div class="col-sm-5">
                  <div class="embed-responsive embed-responsive-16by9">
                    <a href="/nieuws/<%= article.url %>">
                      <img src="<%= article.image_path %>" class="embed-responsive-img" alt="<%= article.title %>">
                    </a>
                  </div>
                </div>
                <div class="col-sm-7">
                  <% } else { %>
                  <div class="col-sm-12">
                    <% } %>
